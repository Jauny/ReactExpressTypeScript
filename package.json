    "concurrently": "^4.0.1",
    "nodemon-webpack-plugin": "^4.0.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "ts-loader": "^5.1.1",
    "typescript": "^3.0.3",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  }
